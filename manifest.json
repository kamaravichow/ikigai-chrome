{
  "manifest_version": 3,
  "name": "IKIGAI HOME",
  "version": "1.0.0",
  "description": "A beautiful and simple new tab page with search functionality",
  "author": "IKIGAI",
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "permissions": [],
  "host_permissions": ["https://duckduckgo.com/*", "https://corsproxy.io/*"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://corsproxy.io https://duckduckgo.com"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "IKIGAI HOME"
  }
}
